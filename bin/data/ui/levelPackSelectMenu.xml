<!-- LEVEL PACK SELECTOR -->

<base status="2" visible="0">
	<area x="0" y="0" w="500" h="500" xRef="1" yRef="1" />
	
	<children>
		<button externFile="(@ui)/presets.xml" importedNode="button_big">
			<area x="0" y="0" w="192" h="64" />
			
			<content>
				<icon x_left="16" y_centre="0" type="image" />
				<label x_centre="32" y_centre="0" type="text" fontId="midFont" />
			</content>
			
			<event type="onMouseDown"> <script>
				importScript("(@script)/control_funcs.js");
				
				menu_hide(caller.parent, -1);
				menu_show(caller.parent.parent.levelSelect, 1);
			</script> </event>
		</button>
	</children>
	
	<event type="onLoad" status="-2"> <script>
		var caller.userDefined.buttonsPerRow = 3;
	</script> </event>
	
	<event type="onKeyDown"> <script>
			if (event.key == key_escape && caller.upKey.status != status_active && caller.leftKey.status != status_active && caller.rightKey.status != status_active){
				importScript("(@script)/control_funcs.js");
				
				menu_hide(caller, 1);
				menu_show(caller.parent.mainMenu, -1);
			}
	</script> </event>
	
	<event type="onWindowResize" status="2"> <script>
			caller.visible = 0;
	</script> </event>
	
</base>