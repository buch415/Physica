<base status="2" visible="0">
	<area x="0" y="0" w="100" h="100" xRef="1" yRef="1" />
	
	<children>
		<button externFile="(@ui)/presets.xml" importedNode="button_big">
			<area x="0" y="0" w="64" h="64" />
			
			<content>
				<label x_centre="0" y_centre="0" type="text" fontId="aveFont" />
				<star1 x_centre="-10" y_top="8" type="image">
					<image file="(@graphics)/icons.png"><area x="192" y="80" w="8" h="8" /></image>
				</star1>
				<star2 x_centre="0" y_top="8" type="image">
					<image file="(@graphics)/icons.png"><area x="192" y="80" w="8" h="8" /></image>
				</star2>
				<star3 x_centre="10" y_top="8" type="image">
					<image file="(@graphics)/icons.png"><area x="192" y="80" w="8" h="8" /></image>
				</star3>
			</content>
			
			<event type="onLoad" status="-2"> <script>
				caller.userDefined.starOn.file = "(@graphics)/icons.png";
				caller.userDefined.starOn.area.x = 200;
				caller.userDefined.starOn.area.y = 80;
				caller.userDefined.starOn.area.w = 8;
				caller.userDefined.starOn.area.h = 8;
				
				caller.userDefined.starOff = caller.content.star1.image;
			</script> </event>
			
			<event type="onMouseDown"> <script>
				importScript("(@script)/control_funcs.js");
				
				menu_hide(caller.parent, -1);
				menu_show(caller.parent.parent.game, 1);
					
				setupLevel(caller.userDefined.levelIndex);
			</script> </event>
			
			<event type="onKeyDown"> <script>
				if (getKeyName(event.key) == caller.userDefined.levelIndex + 1){
					importScript("(@script)/control_funcs.js");
				
					menu_hide(caller.parent, -1);
					menu_show(caller.parent.parent.game, 1);
					
					setupLevel(caller.userDefined.levelIndex);
				}
			</script> </event>
		</button>
	</children>
	
	<event type="onLoad" status="-2"> <script>
		var caller.userDefined.buttonsPerRow = 4;
	</script> </event>
	
	<event type="onKeyDown"> <script>
		if (event.key == key_escape){
			importScript("(@script)/control_funcs.js");
			
			menu_hide(caller, 1);
			menu_show(caller.parent.levelPackSelect, -1);
		}
	</script> </event>
	
	<event type="onWindowResize" status="2"> <script>
			caller.visible = 0;
	</script> </event>
</base>
