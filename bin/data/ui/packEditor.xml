<base status="2" visible="0">
	<children>
		<title externFile="(@ui)/presets.xml" importedNode="label">
			<area x="24" y="24" w="96" h="72" />
			<content>
				<text type="text" text="Level Pack Editor" x_left="0" y_top="0" fontId="aveFont" />
			</content>
		</title>
		
		<properties externFile="(@ui)/presets.xml" importedNode="foldPanel" draggable="1">
			<area x="24" y="148" w="360" h="160" />
			
			<children>
				<idInput externFile="(@ui)/presets.xml" importedNode="input">
					<area x="64" y="48" w="200" h="24" />
					
					<content>
						<label x_right="202" y_centre="0" type="text" text="ID:" fontId="monoFont" />
					</content>
				</idInput>
				
				<nameInput externFile="(@ui)/presets.xml" importedNode="input">
					<area x="64" y="80" w="200" h="24" />
					
					<content>
						<label x_right="202" y_centre="0" type="text" text="Name:" fontId="monoFont" />
					</content>
				</nameInput>
			</children>
			
			<event type="onLoad" status="-2"><script>
				caller.content.title.text = "Properties";
			</script></event>
		</properties>
		
		<levels externFile="(@ui)/presets.xml" importedNode="foldPanel" draggable="1">
			<area x="396" y="148" w="360" h="600" />
			
			<children>
			</children>
			
			<event type="onLoad" status="-2"><script>
				caller.content.title.text = "Levels";
			</script></event>
		</levels>
		
		<achievements externFile="(@ui)/presets.xml" importedNode="foldPanel" draggable="1">
			<area x="24" y="320" w="360" h="428" />
			
			<children>
			</children>
			
			<event type="onLoad" status="-2"><script>
				caller.content.title.text = "Achievements";
			</script></event>
		</achievements>
		
		<back externFile="(@ui)/presets.xml" importedNode="button_round">
			<area x="32" y="96" />
			
			<content>
				<icon type="image" x_centre="0" y_centre="0">
					<image file="(@graphics)/icons.png"><area x="64" y="0" w="16" h="16" /></image>
				</icon>
			</content>
			
			<event type="onMouseUp"><script>
				importScript("(@script)/control_funcs.js");
				
				menu_hide(caller.parent, 1);
				menu_show(caller.parent.parent.mainMenu, -1);
			</script></event>
		</back>
		
		<new externFile="(@ui)/presets.xml" importedNode="button_round">
			<area x="80" y="96" />
			
			<content>
				<icon type="image" x_centre="0" y_centre="0">
					<image file="(@graphics)/icons.png"><area x="48" y="16" w="16" h="16" /></image>
				</icon>
			</content>
		</new>
		
		<save externFile="(@ui)/presets.xml" importedNode="button_round">
			<area x="116" y="96" />
			
			<content>
				<icon type="image" x_centre="0" y_centre="0">
					<image file="(@graphics)/icons.png"><area x="0" y="16" w="16" h="16" /></image>
				</icon>
			</content>
		</save>
		
		<open externFile="(@ui)/presets.xml" importedNode="button_round">
			<area x="152" y="96" />
			
			<content>
				<icon type="image" x_centre="0" y_centre="0">
					<image file="(@graphics)/icons.png"><area x="16" y="16" w="16" h="16" /></image>
				</icon>
			</content>
		</open>
	</children>
	
	<event type="onKeyDown"> <script>
			if (event.key == key_escape && caller.upKey.status != status_active && caller.leftKey.status != status_active && caller.rightKey.status != status_active){
				importScript("(@script)/control_funcs.js");
				
				menu_hide(caller, 1);
				menu_show(caller.parent.mainMenu, -1);
			}
	</script> </event>
</base>
